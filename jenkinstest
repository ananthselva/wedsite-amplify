pipeline {
    agent any
    environment{
        sonarHome= tool 'sonarqubescanner'

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
stage('Build') {
            steps {
                // Build your project
                // Example: Maven build
                echo 'build'
            }
        }
  stage('SonarQube Analysis') {
steps {
                script {
                    def scannerHome = tool 'sonarqubescanner'
                    withSonarQubeEnv() {
                        sh "${sonarHome}/bin/sonar-scanner"
    }
   }
  }
}
}
}
