pipeline {
    agent any
environment {
        scannerHome = tool 'SonarQubeScanner'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/ananthselva/wedsite-amplify.git'
            }
        }

  stage('SonarQube Analysis') {
steps {
                script {
                    withSonarQubeEnv('http://18.171.52.34:9000/') {
                        sh "${scannerHome}/bin/sonar-scanner"
    }
   }
  }
}
}
    post {
        success {
            echo 'Pipeline successfully executed. Deployment complete.'
        }
        failure {
            echo 'Pipeline failed. Please check the logs for details.'
        }
    }
}
