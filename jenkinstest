pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
stage('Build') {
            steps {
                // Build your project
                // Example: Maven build
                echo 'build'
            }
        }
  stage('SonarQube Analysis') {
steps {
                script {
                    withSonarQubeEnv('http://18.171.52.34:9000/') {
                        sh "${scannerHome}/bin/sonar-scanner"
    }
   }
  }
}
}
    post {
        success {
            echo 'Pipeline successfully executed. Deployment complete.'
        }
        failure {
            echo 'Pipeline failed. Please check the logs for details.'
        }
    }
}
